﻿@using FreshShop.Models.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUserModel> SignInManager
@inject UserManager<AppUserModel> UserManager
@model CartItemViewModel
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        @Html.Partial("_NotificationPartial")
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CartItems.Count > 0)
                            {
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td class="thumbnail-img">
                                            <a href="#">
                                                <img class="img-fluid" src="~/images/@item.Image" alt="" />
                                            </a>
                                        </td>
                                        <td class="name-pr">
                                            <a href="#">
                                                @item.ProductName
                                            </a>
                                        </td>
                                        <td class="price-pr">
                                            <p>@item.Price VND</p>
                                        </td>
                                        <td class="quantity-box"><input type="number" size="4" value="@item.Quality" data-product-id="@item.ProductId" min="0" step="1" class="c-input-text qty text"></td>
                                        <td class="total-pr">
                                            <p>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quality * x.Price).ToString() VND</p>
                                        </td>
                                        <td class="remove-pr">
                                            <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <h4>Your Cart is Empty</h4>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="coupon-box">
                    <div class="input-group input-group-sm">
                        <input class="form-control" placeholder="Enter your coupon code" aria-label="Coupon code" type="text">
                        <div class="input-group-append">
                            <button class="btn btn-theme" type="button">Apply Coupon</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="update-box">
                    <input value="Update Cart" type="submit">
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-8 col-sm-12"></div>
            <div class="col-lg-4 col-sm-12">
                <div class="order-box">
                    <h3>Order summary</h3>
                    <div class="d-flex">
                        <h4>Sub Total</h4>
                        <div class="ml-auto font-weight-bold"> @Model.GrandTotal.ToString() VND  </div>
                    </div>
                    <div class="d-flex">
                        <h4>Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 40 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>Coupon Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 10 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Tax</h4>
                        <div class="ml-auto font-weight-bold"> $ 2 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Shipping Cost</h4>
                        <div class="ml-auto font-weight-bold"> Free </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>Grand Total</h5>
                        <div class="ml-auto h5"> @Model.GrandTotal.ToString() VND </div>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-12 d-flex shopping-box">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-controller="Checkout" asp-action="Checkout" class="ml-auto btn hvr-hover">Checkout</a>
                }
            </div>
        </div>

    </div>
</div>
<!-- End Cart -->
<script src="~/js/cart.js"></script>