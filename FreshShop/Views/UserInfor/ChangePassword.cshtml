@model FreshShop.Areas.Identity.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "_LayoutInforUser.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Đổi mật khẩu</h4>
    </div>
    <div class="card-body">
        <form asp-controller="UserInfor" asp-action="ChangePassword" method="post" role="form">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-3">
                    <label asp-for="OldPassword" class="font-weight-semibold" for="oldPassword">Mật khẩu hiện tại:</label>
                    <input asp-for="OldPassword" type="password" class="form-control" id="oldPassword" placeholder="Old Password">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="NewPassword" class="font-weight-semibold" for="newPassword">Mật khẩu mới:</label>
                    <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" placeholder="New Password">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ConfirmPassword" class="font-weight-semibold" for="confirmPassword">Xác nhận lại mật khẩu:</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-primary m-t-30">Đổi mật khẩu</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
