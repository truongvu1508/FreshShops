@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product List";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)

    {

        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;

    }
}

@if (TempData["success"] != null || TempData["Success"] != null)

{
    <div class="alert alert-success">
        @TempData["success"] ?? @TempData["Success"]
    </div>
}


<a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<h4>Danh sách sản phẩm</h4>
<div style="overflow-x: auto;">
<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Kho</th>
            <th scope="col">Bán</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá bán</th>
            <th scope="col">Giá kho</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Ký tự</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Thêm số lượng</a></td>
                <td>@item.Quantity</td>
                <td>@item.Sold</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td>@item.CapitalPrice.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@item.Image" width="120" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" onclick="return confirm('Are you sure you want to delete this product?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>