@model CouponModel
@{
	ViewData["title"] = "Tạo mới phiếu giảm giá";
}

<!-- Hiển thị thông báo lỗi -->
@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">
		@TempData["Error"]
	</div>
}
<h4>Tạo mới phiếu giảm giá</h4>
<div class="col-md-9">
	<form asp-action="Create" autocomplete="off" asp-controller="Coupon" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label>Tên phiếu giảm giá</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Mô tả của phiếu giảm giá</label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Ngày bắt đầu</label>
			<input asp-for="DateStart" class="form-control" />
			<span asp-validation-for="DateStart" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Ngày kết thúc</label>
			<input asp-for="DateExpired" class="form-control" />
			<span asp-validation-for="DateExpired" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Trạng thái</label>
			<select asp-for="Status" class="form-control">
				<option value="1">Hiển thị</option>
				<option value="0">Ẩn</option>
			</select>
			<span asp-validation-for="Status" class="text-danger" />
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Tạo mới</button>
		</div>
	</form>
	<h4>Danh sách các mã giảm giá</h4>
	<table class="table table-striped" id="myTable">
		<thead>
			<tr>
				<th scope="col">Tên phiếu giảm giá</th>
				<th scope="col">Mô tả phiếu giảm giá</th>
				<th scope="col">Ngày bắt đầu</th>
				<th scope="col">Ngày hết hạn</th>
				<th scope="col">Số lượng</th>
				<th scope="col">Trạng thái</th>
				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in ViewBag.CouponList)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>@item.DateStart.ToString("dd-MM-yyyy")</td>
					<td>@item.DateExpired.ToString("dd-MM-yyyy")</td>
					<td>@item.Quantity</td>

					<td>
						@if (item.Status == 1)
						{
							<select name="Status">
								<option selected value="1">
									Kích hoạt
								</option>
								<option value="0">
									Ẩn
								</option>
							</select>
						}
						else
						{
							<select name="Status">
								<option value="1">
									Kích hoạt
								</option>
								<option selected value="0">
									Ẩn
								</option>
							</select>
						}
					</td>
					<td>
						@if (item.DateExpired <DateTime.Now)
						{
							<span class="text text-danger">Đã hết hạn</span>
						}
						else
						{
							TimeSpan remainingTime = item.DateExpired - DateTime.Now;
							int daysRemaining = remainingTime.Days;
							@if (daysRemaining == 0)
							{
								<span class="text text-danger"> Hôm nay</span>
							}
							else
							{
								<span class="text text-success">@daysRemaining ngày còn lại</span>
							}
						}
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
