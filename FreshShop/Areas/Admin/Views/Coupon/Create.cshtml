@model CouponModel
@{
	ViewData["title"] = "Tạo mới phiếu giảm giá";
}

<h4>Tạo mới phiếu giảm giá</h4>
<div class="col-md-9">
	<form asp-action="Create" autocomplete="off">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label>Tên phiếu giảm giá</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Mô tả</label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Giá trị giảm giá (%)</label>
			<input asp-for="CouponValue" class="form-control" type="number" min="1" max="100" />
			<span asp-validation-for="CouponValue" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Ngày bắt đầu</label>
			<input asp-for="DateStart" class="form-control" type="date" />
			<span asp-validation-for="DateStart" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Ngày kết thúc</label>
			<input asp-for="DateExpired" class="form-control" type="date" />
			<span asp-validation-for="DateExpired" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Số lượng</label>
			<input asp-for="Quantity" class="form-control" type="number" min="1" />
			<span asp-validation-for="Quantity" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Trạng thái</label>
			<select asp-for="Status" class="form-control">
				<option value="1">Hiển thị</option>
				<option value="0">Ẩn</option>
			</select>
			<span asp-validation-for="Status" class="text-danger" />
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-primary">Tạo mới</button>
			<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}