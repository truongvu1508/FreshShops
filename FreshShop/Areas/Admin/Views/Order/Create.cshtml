@model OrderModel
@{
    ViewData["title"] = "Tạo mới đơn hàng";
}

<!-- Hiển thị thông báo lỗi -->
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @TempData["error"]
    </div>
}
<h4>Tạo mới đơn hàng</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Người đặt hàng</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Ngày đặt hàng</label>
            <input asp-for="CreatedDate" class="form-control" type="date" />
            <span asp-validation-for="CreatedDate" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Trạng thái</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Đơn hàng mới</option>
                <option value="0">Đơn hàng thành công</option>
            </select>
            <span asp-validation-for="Status" class="text-danger" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo mới</button>
        </div>
    </form>
    <a asp-action="Index" asp-controller="Order" class="btn btn-warning btn-sm">Về trang trước</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
